# Server Configuration
NODE_ENV=development
PORT=3000
SWAGGER_ENABLED=true
BASE_URL=localhost:3000


# ===== MongoDB 管理員設定 =====
MONGO_INITDB_ROOT_USERNAME=dbadmin
MONGO_INITDB_ROOT_PASSWORD=adminpass
MONGO_INITDB_DATABASE=url-shortener

# ===== 應用程式連接字串 =====
MONGODB_URI=mongodb://dbadmin:adminpass@mongo:27017/url-shortener?authSource=admin

# ===== Mongo Express Web UI 登入 =====
ME_CONFIG_BASICAUTH_USERNAME=webadmin
ME_CONFIG_BASICAUTH_PASSWORD=webpass

