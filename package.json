{
  "name": "url-redirector",
  "version": "1.0.0",
  "description": "A URL shortener service with Express.js and MongoDB",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && npm run copy:views && npm run copy:public",
    "copy:views": "cp -r src/views dist/views 2>/dev/null || true",
    "copy:public": "cp -r public dist/public 2>/dev/null || true",
    "start": "NODE_ENV=production node dist/server.js",
    "start:dev": "NODE_ENV=development node dist/server.js",
    "dev": "NODE_ENV=development nodemon src/server.ts",
    "dev:prod": "NODE_ENV=production nodemon src/server.ts",
    "dev:watch": "tsc --watch",
    "clean": "rimraf dist",
    "docker:up": "NODE_ENV=production docker compose up",
    "docker:down": "docker compose down",
    "docker:build": "NODE_ENV=production docker compose up --build",
    "docker:dev": "NODE_ENV=development docker compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate",
    "test": "NODE_ENV=test vitest",
    "test:run": "NODE_ENV=test vitest run",
    "test:coverage": "NODE_ENV=test vitest run --coverage",
    "test:ui": "NODE_ENV=test vitest --ui",
    "test:watch": "NODE_ENV=test vitest --watch"
  },
  "keywords": [
    "url-shortener",
    "express",
    "mongodb",
    "docker"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "@types/ejs": "^3.1.5",
    "@types/qrcode": "^1.5.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "mongoose": "^8.0.3",
    "nanoid": "^3.3.11",
    "prisma": "^6.14.0",
    "qrcode": "^1.5.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
